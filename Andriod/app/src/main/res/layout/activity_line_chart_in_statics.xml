<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LineChartInStatsActivity">


    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/linechart1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.github.mikephil.charting.charts.LineChart>

    <TextView
        android:id="@+id/topic1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Topic2"
        android:textColor="@color/black"></TextView>

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginLeft="60dp"
        android:background="@color/teal_200"
        android:backgroundTint="@color/headercolor"
        android:layout_toEndOf="@id/topic1"
        android:layout_alignParentRight="true"
        ></Spinner>

    <TextView
        android:id="@+id/XAxisLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/linechart1"
        android:gravity="center"
        android:text=""
        android:textColor="@color/black"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="1.9in"
        android:rotation="270"
        android:text="Sit Accuracy"
        android:textColor="@android:color/black"
        android:transformPivotX="20dp"
        android:transformPivotY="23dp" />

    <Button
        android:id="@+id/BtnPieChart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home Page"
        android:textSize="14sp"
        android:padding="0dp"
        android:layout_marginRight="14sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>